<div class="col s12" style="position: relative; margin-bottom: 40px; margin-top: 2rem">
    <div class="center-align" style="margin-bottom: 0.75rem">
        <img src="{{APP_IMAGE_PATH}}<%= file %>.jpg" class="responsive-img center-align"
             style="border-radius: 8px">
    </div>

    <div class="fixed-action-btn">
        <% if(ownProfile) { %>
            <% if(isDefault != 1){ %>
                <a onclick="selectDefaultImage()" class="btn-floating waves-effect waves-light grey third">
                    <i class="material-icons">check</i>
                </a>
            <% } %>
            <a class="btn-floating waves-effect waves-light second modal-trigger red" href="#deleteModal">
                <i class="material-icons">delete</i>
            </a>
        <% } %>
        <a class="btn-floating btn-large waves-effect waves-light"
           onclick="apretaste.back()"><i class=" material-icons">arrow_back</i></a>
    </div>
</div>


<div id="deleteModal" class="modal">
    <div class="modal-content">
        <p>¿Está seguro de eliminar esta imagen?</p>
    </div>
    <div class="modal-footer">
        <a class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
        <a onclick="deleteImage()" class="modal-close waves-effect waves-red red-text btn-flat">Eliminar</a>
    </div>
</div>
